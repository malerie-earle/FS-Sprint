<!-- views/products.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Home Page</title>
</head>
<body>
  <div class="home">
  <h1>Products</h1>
  <% products.forEach(product => { %>
      <h2><%= product.name %></h2>
      <img><%= product.image %></>
      <p><%= product.description %></p>
      <p><%= product.category %></p>
      <p><%= product.price %></p>
  <% }); %>
</div>
</body>
</html>